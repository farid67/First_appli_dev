<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.farid.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/TotalCustom" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message" >

            <!-- THe following group is here to support the "Up" button in the display page -->
            <!-- In case to support the old versions of Android, we can use a meta-date group -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.farid.myapplication.MainActivity" >
            </meta-data>
        </activity>
        <activity
            android:name=".ShowImagesActivity"
            android:label="@string/title_activity_show_images" >
        </activity>
        <activity android:name=".SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
    </application>

</manifest>
